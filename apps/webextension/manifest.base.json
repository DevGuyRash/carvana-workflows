{
  "name": "Carvana Workflows",
  "description": "Unified Chrome + Firefox extension powered by Rust + WebAssembly workflows.",
  "version": "0.0.1",
  "action": {
    "default_title": "Carvana Workflows",
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://jira.carvana.com/*",
    "https://*.fa.us2.oraclecloud.com/*",
    "https://carma.cvnacorp.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://jira.carvana.com/*",
        "https://*.fa.us2.oraclecloud.com/*",
        "https://carma.cvnacorp.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pkg/*"],
      "matches": [
        "https://jira.carvana.com/*",
        "https://*.fa.us2.oraclecloud.com/*",
        "https://carma.cvnacorp.com/*"
      ]
    }
  ]
}
