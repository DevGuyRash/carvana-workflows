{
  "name": "carvana-workflows",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "npm run build:wasm && npm run build:extension",
    "build:wasm": "node scripts/build-wasm.mjs",
    "build:extension": "node scripts/build-extension.mjs",
    "package:extensions": "node scripts/package-extensions.mjs",
    "package": "npm run build && npm run package:extensions",
    "dev": "node scripts/dev-extension.mjs",
    "clean": "rimraf dist apps/webextension/pkg",
    "typecheck": "tsc --project apps/webextension/tsconfig.json --noEmit && cargo check --manifest-path rust/Cargo.toml",
    "test": "cargo test --manifest-path rust/Cargo.toml"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.37",
    "esbuild": "^0.25.11",
    "rimraf": "^5.0.5",
    "typescript": "^5.6.3"
  }
}
